{extends "layout.latte"}

{block title}Nouveau groupe{/block}

{block content}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title h5 m-0">Nouveau groupe</h2>
            </div>
            <div class="card-body">
                {if isset($error)}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {$error}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {/if}

                <form method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nom</label>
                        <input type="text" class="form-control {if isset($error)}is-invalid{/if}" 
                               id="name" name="name" value="{$_POST['name'] ?? ''}" required>
                        <div class="invalid-feedback">Le nom du groupe est requis</div>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="selfRegistration" 
                               name="selfRegistration" value="1" {if isset($_POST['selfRegistration'])}checked{/if}>
                        <label class="form-check-label" for="selfRegistration">Auto-inscription autorisée</label>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="/groups" class="btn btn-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">Créer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{/block}
{block scripts}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const nameInput = document.getElementById("name");

        nameInput.addEventListener("invalid", function () {
            this.setCustomValidity("Le nom du groupe est requis");
        });

        nameInput.addEventListener("input", function () {
            this.setCustomValidity("");
        });
    });
</script>
{/block}
